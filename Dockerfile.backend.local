# Backend Dockerfile for LOCAL development
# Includes Python orchestrator + Bun server
# Runs as non-root user (required for Claude SDK bypassPermissions mode)

# Stage 1: Build server dependencies
FROM oven/bun:1 AS server-builder

WORKDIR /app/server
COPY apps/server/package.json apps/server/bun.lock ./
RUN bun install --frozen-lockfile --production

# Stage 2: Final production image
FROM python:3.12-slim

# Create non-root user for security
# Required: Claude SDK refuses bypassPermissions mode when running as root
RUN useradd -m -s /bin/bash -u 1000 buildos

# Install system dependencies and bun (as root, before switching user)
RUN apt-get update && apt-get install -y \
    curl \
    unzip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install bun for the buildos user
USER buildos
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/home/buildos/.bun/bin:${PATH}"

# Switch back to root for setup
USER root

WORKDIR /app

# Copy Python requirements and install
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy server dependencies from builder
COPY --from=server-builder /app/server/node_modules ./apps/server/node_modules

# Copy application code
COPY orchestrator.py conversation_logger.py load_env.py sdk_tools.py ./
COPY apps/server/src ./apps/server/src/
COPY apps/server/package.json ./apps/server/

# Copy Claude config (agents, tools, etc.)
COPY .claude ./.claude/

# Create necessary directories
RUN mkdir -p uploads workspace .logs/conversations

# Change ownership of entire app to buildos user
RUN chown -R buildos:buildos /app

# Switch to non-root user for runtime
USER buildos

# Environment variables (defaults)
ENV SERVER_PORT=4000
ENV NODE_ENV=production
ENV PYTHONUNBUFFERED=1
ENV PATH="/home/buildos/.bun/bin:${PATH}"

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:4000/events/recent?limit=1 || exit 1

# Expose port
EXPOSE 4000

# Start server
WORKDIR /app/apps/server
CMD ["bun", "run", "src/index.ts"]
