# =============================================================================
# buildOS Dashboard - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# BACKEND ENVIRONMENT VARIABLES (Runtime)
# These are set in docker-compose as environment variables
# =============================================================================

# Anthropic API Key for Claude AI
# Required for AI orchestrator functionality
# Users can also provide their own key via the UI
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# Server port (default: 4000)
SERVER_PORT=4000

# Node environment
NODE_ENV=production

# Dashboard URL - used for internal callbacks
# Production: https://agents.bimai.nl
# Development: http://localhost:4000
DASHBOARD_URL=https://agents.bimai.nl

# Domain for Traefik routing (production only)
DOMAIN=agents.bimai.nl

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Build-time)
# =============================================================================
# ⚠️  IMPORTANT: These are baked into the static files during Docker build!
# They must be set as build args in docker-compose, not runtime env vars.
# For production, leave VITE_API_URL and VITE_WS_URL empty to use relative URLs.
# =============================================================================

# API URL for backend communication
# Production: leave empty for relative URLs (same origin)
# Development: http://localhost:4000
VITE_API_URL=

# WebSocket URL for real-time events
# Production: leave empty for auto-detection
# Development: ws://localhost:4000/stream
VITE_WS_URL=

# API Port (used for development)
VITE_API_PORT=4000

# Maximum events to display in dashboard
VITE_MAX_EVENTS=300

# Frontend port for development (nginx container)
FRONTEND_PORT=5173

# =============================================================================
# OPTIONAL: Cloudflare Tunnel (for local dev sharing)
# Get this from: https://one.dash.cloudflare.com/ → Networks → Tunnels
# =============================================================================
CLOUDFLARE_TUNNEL_TOKEN=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Session ID prefix (for testing)
BUILDOS_SESSION_ID=test-session

