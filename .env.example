# buildOS Dashboard Configuration
# Copy this to .env and fill in your values

# ============================================
# REQUIRED: Anthropic API Key for orchestrator
# Get your key from: https://console.anthropic.com/
# ============================================
ANTHROPIC_API_KEY=your-api-key-here

# ============================================
# PRODUCTION: Dokploy/Hetzner Settings
# ============================================
# Your domain (without https://)
DOMAIN=agents.bimai.nl

# Dashboard URL (with https:// for production)
DASHBOARD_URL=https://agents.bimai.nl

# Server Configuration
SERVER_PORT=4000
NODE_ENV=production

# ============================================
# OPTIONAL: Cloudflare Tunnel (for local dev sharing)
# Get this from: https://one.dash.cloudflare.com/ → Networks → Tunnels
# ============================================
CLOUDFLARE_TUNNEL_TOKEN=

# ============================================
# DEVELOPMENT: Local Settings
# ============================================
# Client Configuration (for local development only)
VITE_PORT=5173
VITE_API_PORT=4000
VITE_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000/stream

# Dashboard Settings (optional)
VITE_MAX_EVENTS=300

# Session ID prefix (for testing)
BUILDOS_SESSION_ID=test-session
